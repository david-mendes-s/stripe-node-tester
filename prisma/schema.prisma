generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  // ID do Cliente no Stripe (Essencial)
  // Reutilizar este ID impede a criação de clientes duplicados
  stripeCustomerId String? @unique

  // ID da Assinatura no Stripe (Para gerenciar a recorrência)
  // Permite verificar o status da assinatura rapidamente
  stripeSubscriptionId String? @unique

  // Status da Assinatura (Para controle de acesso)
  // ex: 'active', 'trialing', 'canceled', 'unpaid'
  subscriptionStatus String?
}
